# Auction Server - Production Environment Variables
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=6002

# Database
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/pulasa-auction?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Unified Auth Service URL
UNIFIED_AUTH_URL=https://your-auth-service.onrender.com

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Client URLs (Add your Vercel frontend URLs)
CLIENT_URL=https://your-auction-client.vercel.app

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 